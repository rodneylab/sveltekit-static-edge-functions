{
	"name": "sveltekit-static-edge-functions",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"dev:edge": "BROWSER=none pnpm netlify dev",
		"build": "vite build",
		"preview": "vite preview",
		"preview:edge": "BROWSER=none pnpm netlify dev -c \"pnpm run preview\" --targetPort 4173",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"lint:css": "stylelint \"src/**/*.{css,svelte}\"",
		"format": "prettier --plugin-search-dir . --write .",
		"prettier:check": "prettier --check --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^17.4.2",
		"@fontsource/figtree": "^4.5.3",
		"@sveltejs/adapter-auto": "1.0.2",
		"@sveltejs/adapter-static": "1.0.5",
		"@sveltejs/kit": "1.3.6",
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.50.0",
		"@typescript-eslint/parser": "^5.50.0",
		"commitlint": "^17.4.2",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"netlify-cli": "^12.10.0",
		"postcss-html": "^1.5.0",
		"prettier": "^2.8.3",
		"prettier-plugin-svelte": "^2.9.0",
		"stylelint": "^14.16.1",
		"stylelint-config-recommended": "^9.0.0",
		"stylelint-config-standard": "^29.0.0",
		"svelte": "^3.55.1",
		"svelte-check": "^3.0.3",
		"svelte-preprocess": "^5.0.1",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5",
		"vite": "^4.0.4"
	},
	"type": "module",
	"peerDependencies": {
		"@types/node": "^18.11.0"
	}
}
